# Modo offline: true para simular Grok e API X, false para usar APIs reais
OFFLINE_MODE=true

# API Key do Grok (usada apenas quando OFFLINE_MODE=false)
GROK_API_KEY=coloque_sua_chave_aqui

# Dados para integração com a API do X (Twitter)
X_CLIENT_ID=seu_client_id
X_CLIENT_SECRET=seu_client_secret
X_REDIRECT_URI=http://localhost:8501

# Senha para acesso à área administrativa
ADMIN_PASSWORD=admin

# Caminho do banco de dados (opcional, padrão já é database/fan_profiles.db)
DB_PATH=database/fan_profiles.db

# Diretório para salvar uploads
UPLOAD_DIR=uploads
